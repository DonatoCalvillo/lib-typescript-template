    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "globals": "^15.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.7",
    "standard-version": "^9.5.0",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  },
  "lint-staged": {
    "*.(js|ts)": "npm run lint:fix"
